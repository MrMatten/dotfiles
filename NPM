#!/bin/zsh

command -v node >/dev/null 2>&1 || { 
    echo >&2 "Installing NVM Now"; \
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.38.0/install.sh | bash
    echo "installing node now"
    nvm install node
}

packages=(
    elm-oracle
    elm-format
    neovim
    spaceship-zsh-theme
    apollo
    @elm-tooling/elm-language-server
)

for i in "${packages[@]}"
do
  npm install -g "$i"
done
